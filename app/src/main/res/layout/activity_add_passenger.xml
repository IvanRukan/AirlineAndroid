<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#F9F7C9">


    <EditText
        android:id="@+id/PassengerPlace"
        android:layout_width="216dp"
        android:layout_height="39dp"
        android:layout_marginStart="96dp"
        android:layout_marginTop="216dp"
        android:ems="10"
        android:hint="Место на борту: "
        android:inputType="text"
        android:textColorHint="#A34343"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/PassngerAge"
        android:layout_width="216dp"
        android:layout_height="39dp"
        android:layout_marginStart="96dp"
        android:layout_marginTop="120dp"
        android:ems="10"
        android:hint="Возраст пассажира:"
        android:inputType="text"
        android:textColorHint="#A34343"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="409dp"
        android:layout_height="78dp"
        android:background="#A34343"
        android:gravity="center"
        android:text="Добавить пассажира:"
        android:textColor="#F9F7C9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/save_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="104dp"
        android:layout_marginBottom="244dp"
        android:backgroundTint="#A34343"
        android:text="Сохранить пассажира"
        android:textColor="#F9F7C9"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/PassengerName"
        android:layout_width="216dp"
        android:layout_height="39dp"
        android:layout_marginStart="97dp"
        android:layout_marginTop="31dp"
        android:ems="10"
        android:hint="ФИО пассажира:"
        android:inputType="text"
        android:textColorHint="#A34343"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

</androidx.constraintlayout.widget.ConstraintLayout>